<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.confirmTransaction.ConfirmTransaction">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:id="@+id/transactionsListWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <RelativeLayout
                    android:id="@+id/transactionsList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true"
                    android:layout_marginHorizontal="8pt"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter transfer amount"
                />
                <EditText
                        android:id="@+id/amountField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:inputType="numberDecimal"
                        android:hint="Сумма"
                />
            </RelativeLayout>
            <Button
                    android:id="@+id/confirmTransactionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_alignParentBottom="true"
                    android:text="Отправить"
            />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/loader" />
</FrameLayout>